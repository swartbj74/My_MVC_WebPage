@{
    ViewData["Title"] = "Cart";
}

<style>

    body {
  background-color: #6b686859;
  padding: 20px;
  font-family: Arial;
}

</style>
<div id="site">
    <header id="masthead">
    </header>
    <div id="content">
        <h1>Your Shopping Cart</h1>
        <form id="shopping-cart" action="cart.cshtml" method="post">
            <table class="shopping-cart">
                <thead>
                    <tr>
                        <th scope="col">Item</th>
                        <th scope="col">Qty</th>
                        <th scope="col" colspan="2">Price</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
            <p id="sub-total">
                <strong>Sub Total</strong>: <span id="stotal"></span>
            </p>
            <ul id="shopping-cart-actions">
